{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",

        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        ".github"
    ]
}
